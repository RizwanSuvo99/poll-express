<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Polls</title>

    <!-- Bootstrap 5 CSS CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      crossorigin="anonymous"
    />
    <!-- JS Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"
    ></script>
    
  </head>
  <body class="bg-light">
    <div class="container mt-5">
      <h2 class="mb-4">Available Polls</h2>

      <% if (polls && polls.length > 0) { %>
      <div class="row">
        <% polls.forEach(function(poll) { %>
        <div class="col-md-6 mb-4">
          <div class="card shadow-sm">
            <div class="card-body">
              <h5 class="card-title"><%= poll.title %></h5>
              <p class="card-text text-muted"><%= poll.description %></p>

              <% if (poll.options && poll.options.length > 0) { %>
              <ul class="list-group mb-3">
                <% poll.options.forEach(function(option, index) { %>
                <li class="list-group-item">
                  Option <%= index + 1 %>: <%= option %>
                </li>
                <% }) %>
              </ul>
              <% } else { %>
              <p class="text-warning">No options available.</p>
              <% } %>

              <!-- Example button to go to poll voting -->
              <a href="/polls/<%= poll._id %>" class="btn btn-primary btn-sm"
                >Vote Now</a
              >
            </div>
          </div>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="alert alert-info">No polls found.</div>
      <% } %>
    </div>
  </body>
</html>
